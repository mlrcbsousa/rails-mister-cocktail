<!-- app/views/cocktails/show.html.erb -->
<%= link_to 'Back to Cocktails', cocktails_path %>
<h2><%= @cocktail.name %></h2>

<h3>Ingredients and doses</h3>
<ul class="list-unstyled">
  <% @cocktail.doses.each do |dose| %>
    <li>
      <strong><%= dose.description %></strong>:
      <%= dose.ingredient.name %>

      <%= link_to dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
    </li>
  <% end %>
</ul>
<%= link_to 'Add Dose', new_cocktail_dose_path(@cocktail) %>
