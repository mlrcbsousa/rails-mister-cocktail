<!-- app/views/cocktails/new.html.erb -->
<div class="container mt-4">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 m-auto">
      <div class="cocktail-form">
        <h1>New cocktail</h1>
        <div class="mt-3">
          <%= simple_form_for(@cocktail) do |f| %>
            <%= f.input :name %>
            <%= f.input :picture_url %>
            <%= f.input :remote_photo_url %>
            <%= f.input :photo_cache, as: :hidden %>
            <%= f.submit class: 'btn btn-outline-default' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
