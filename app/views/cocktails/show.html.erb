<!-- app/views/cocktails/show.html.erb -->
<div class="container">
  <h1><%= @cocktail.name %></h1>

  <h2>Ingredients list:</h2>
  <ul class="list-unstyled">
    <% @cocktail.doses.each do |dose| %>
      <% if dose.valid? %>
        <li>
          <strong><%= dose.description %></strong>:

          <%= dose.ingredient.name %>

          <%= link_to dose_path(dose),
                method: :delete,
                data: { confirm: "Are you sure?" } do %>
                  <i class="far fa-trash-alt"></i>
                <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>

  <h3>New dose</h3>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient, input_html: { class: 'select2' } %>
    <%= f.submit class: 'btn btn-outline-default' %>
  <% end %>

  <h2>New review</h2>
  <%= simple_form_for [@cocktail, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: 0..5 %>
    <%= f.submit "add a review", class: "btn btn-primary" %>
  <% end %>

  <hr>

  <p><strong>Reviews:</strong></p>
  <ul class="list-unstyled">
    <% @cocktail.reviews.each do |review| %>
      <li>
        <% if review.valid? %>
          <% review.rating.times do %>
            <i class="fas fa-fire"></i>
          <% end %>
          <%= review.content %>
        <% end %>
      </li>
    <% end %>
  </ul>

</div>
