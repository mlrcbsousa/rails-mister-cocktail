<!-- app/views/cocktails/show.html.erb -->
<div class="container">
  <h1><%= @cocktail.name %></h1>

  <h2>Ingredients and doses</h2>
  <ul class="list-unstyled">
    <% @cocktail.doses.each do |dose| %>
      <% if dose.valid? %>
        <li>
          <strong><%= dose.description %></strong>:

          <%= dose.ingredient.name %>

          <%= link_to dose_path(dose),
                method: :delete,
                data: { confirm: "Are you sure?" } do %>
                  <i class="far fa-trash-alt"></i>
                <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>

  <h3>New dose</h3>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit class: 'btn btn-outline-default' %>
  <% end %>

</div>



