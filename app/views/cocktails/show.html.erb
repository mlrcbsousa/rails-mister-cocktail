<!-- app/views/cocktails/show.html.erb -->
<%= link_to 'Back to Cocktails', cocktails_path %>
<h2><%= @cocktail.name %></h2>

<%= link_to 'Add Dose', new_cocktail_dose_path(@cocktail) %>

<h3>Ingredients and doses</h3>
<% @cocktail.doses.each do |dose| %>
  <%= dose.description %>:
  <%= dose.ingredient %>
<% end %>
