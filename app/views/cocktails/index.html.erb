<!-- app/views/cocktails/index.html.erb -->
<div class="container">

  <div class="index-title">
    <h1 class="text-primary">All our Cocktails <%= "(#{@total})" if @query.nil? %></h1>
    <% if @query %>
      <p>You searched for <em class="text-primary">"<%= @query %>"</em>.. We found <strong class="text-primary"><%= @cocktails.total_count %></strong> cocktails out of <strong><%= @total %></strong> on our website.</p>
    <% end %>
  </div>
  <div class="row">

    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <%= render 'components/card', cocktail: cocktail %>
      </div>
    <% end %>

  </div>
  <%= paginate @cocktails %>
</div>
