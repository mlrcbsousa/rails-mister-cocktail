<!-- app/views/cocktails/new.html.erb -->
<div class="new">
  <div class="container">

    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="cocktail-show-card">
          <h1>New Cocktail</h1>
          <div class="mt-3">
            <%= simple_form_for(@cocktail) do |f| %>
              <%= f.input :name %>
              <%= f.input :remote_photo_url, label: 'Photo url' %>
              <%= f.input :photo %>
              <%= f.input :photo_cache, as: :hidden %>
              <%= f.submit class: 'btn btn-primary' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
